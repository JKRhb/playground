{
  "info": {
    "title": "Example Bluetooth mesh Generic Level Model", 
    "version": "2021-03-05", 
    "copyright": "Copyright 2020-2021 Bluetooth SIG, Inc. All rights reserved.", 
    "license": "https://github.com/one-data-model/oneDM/blob/master/LICENSE"
  }, 
  "namespace": {
    "pg": "https://onedm.org/playground/"
  }, 
  "defaultNamespace": "pg", 
  "sdfObject": {
    "GenericLevel": {
      "sdfProperty": {
        "Level": {
          "sdfRef": "#/sdfObject/GenericLevel/sdfData/GenericLevelData"
        }
      },
      "sdfAction": {
        "LevelGet": {
          "description": "Get the status of the Level server",
          "sdfOutputData": {
            "type": "object",
            "properties": {
              "PresentLevel": {
                "sdfRef": "#/sdfObject/GenericLevel/sdfData/GenericLevelData"
              },
              "TargetLevel": {
                "sdfRef": "#/sdfObject/GenericLevel/sdfData/GenericLevelData"
              },
              "RemainingTimeSteps": {
                "sdfRef": "#/sdfObject/GenericLevel/sdfData/TransitionTimeSteps"
              },
              "StepResolution": {
                "sdfRef": "#/sdfObject/GenericLevel/sdfData/StepResolution"
              }  
            }
          }
        },
        "LevelSet": {
          "description": "Set the level server state with time and delay parameters",
          "sdfInputData": {
            "type": "object",
            "properties": {
              "Level": {
                "sdfRef": "#/sdfObject/GenericLevel/sdfData/GenericLevelData"
              },
              "TransitionTimeSteps": {
                "sdfRef": "#/sdfObject/GenericLevel/sdfData/TransitionTimeSteps"
              },
              "StepResolution": {
                "sdfRef": "#/sdfObject/GenericLevel/sdfData/StepResolution"
              },
              "Delay": {
                "sdfRef": "#/sdfObject/GenericLevel/sdfData/DelayData"
              }
            }
          }
        },
        "DeltaSet": {
          "description": "Set the level server state with time and delay parameters",
          "sdfInputData": {
            "type": "object",
            "properties": {
              "DeltaLevel": {
                "type": "number",
                "minimum": -65535,
                "maximum": 65535,
                "multipleOf": 1
              },
              "TransitionTimeSteps": {
                "sdfRef": "#/sdfObject/GenericLevel/sdfData/TransitionTimeSteps"
              },
              "StepResolution": {
                "sdfRef": "#/sdfObject/GenericLevel/sdfData/StepResolution"
              },
              "Delay": {
                "sdfRef": "#/sdfObject/GenericLevel/sdfData/DelayData"
              }
            }
          }
        },
        "MoveSet": {
          "description": "Set the level server state with time and delay parameters",
          "sdfInputData": {
            "type": "object",
            "properties": {
              "Level": {
                "sdfRef": "#/sdfObject/GenericLevel/sdfData/GenericLevelData"
              },
              "TransitionTimeSteps": {
                "sdfRef": "#/sdfObject/GenericLevel/sdfData/TransitionTimeSteps"
              },
              "StepResolution": {
                "sdfRef": "#/sdfObject/GenericLevel/sdfData/StepResolution"
              },
              "Delay": {
                "sdfRef": "#/sdfObject/GenericLevel/sdfData/DelayData"
              }
            }
          }
        }
      },
      "sdfData": {
        "GenericLevelData": {
          "description": "level state data",
          "type": "number",
          "minimum": -32768,
          "maximum": 32767,
          "multipleOf": 1
        },
        "TransitionTimeSteps": {
          "description": "Number of steps in the transition",
          "type": "number",
          "minimum": 0,
          "maximum": 63,
          "multipleOf": 1
        },
        "StepResolution": {
          "description": "Step Resolution, time per step",
          "sdfChoice": {
            "100 Milliseconds": {}, 
            "1 Second": {}, 
            "10 Seconds": {}, 
            "10 Minutes": {}
          }
        },
        "DelayData": {
          "description": "delay in increments of 5mS",
          "type": "number",
          "unit": "s",
          "minimum": 0,
          "maximum": 255,
          "multipleOf": 1,
          "scaleMinimum": 0,
          "scaleMaximum": 1.275
        }
      }
    }
  }
}